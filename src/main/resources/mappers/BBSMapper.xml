<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.minieyes.stories.bbs.dao.BBSDAO">


	
	<select id="selectAllBBS"
		resultType="com.minieyes.stories.bbs.model.BBS">
	
		SELECT
			`id`
			, `title`
		FROM
			`bbs`
	
	</select>

	<select id="selectTargetBBS"
		parameterType="int"
		resultType="com.minieyes.stories.bbs.model.BBS">
	
		SELECT
			`id`
			, `title`
		FROM
			`bbs`
		WHERE
			`id` = #{bbsId}
		
	</select>

	<select id="selectCategoriesByBBS"
		parameterType="int"
		resultType="com.minieyes.stories.bbs.model.Category">
	
		SELECT
			`id`
			, `title`
		FROM
			`category`
		WHERE
			`bbsId` = #{bbsId}	
	
	</select>
	
	<select id="selectBBS"
		parameterType="int"
		resultType="com.minieyes.stories.bbs.model.BBSDTO">
		
			SELECT
				article.id AS articleId
				, category.title AS categoryName
			    , article.title AS title
			    , article.userName AS userName
			    , article.imagePath as imagePath
			    , article.createdAt AS createdAt
			FROM
				`article`
			JOIN `bbs` ON article.bbsId = bbs.id
			JOIN `category` ON article.categoryId = category.id
			WHERE bbs.id = #{bbsId}
			ORDER BY articleId DESC
	
	</select>
	
	<select id="selectArticle"
		parameterType="int"
		resultType="com.minieyes.stories.bbs.model.Article">
		
		SELECT
			`id`
			, `userId`
			, `userName`
			, `bbsId`
			, `categoryId`
			, `grpId`
			, `depth`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`article`
		WHERE
			`id` = #{id}
	
	</select>
	
	<insert id="insertNewArticle"
		parameterType="map">
		
		INSERT INTO `article`
			( `userId`
			, `userName`
			, `bbsId`
			, `categoryId`
			, `grpId`
			, `depth`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`)
			VALUE
			( #{userId}
			, #{userName}
			, #{bbsId}
			, #{categoryId}
			, LAST_INSERT_ID()+1
			, 1
			, #{title}
			, #{content}
			, #{imagePath}
			, now()
			, now())
	
	</insert>
	
	<update id="updateArticle"
		parameterType="map">
		
		UPDATE `article`
		SET
			`categoryId` = #{categoryId},
			`title` = #{title},
			`content` = #{content},
			`updatedAt` = now()
		WHERE
			`id` = #{id}
	
	</update>
	
	<delete id="deleteArticle"
		parameterType="int">
		
		DELETE FROM
			`article`
		WHERE
			`id` = #{id}		
	
	</delete>
	
	<insert id="insertNewComment"
		parameterType="map">
		
		INSERT INTO `comment`
			( `articleId`
			, `userId`
			, `userName`
			, `grpId`
			, `depth`
			, `content`
			, `createdAt`
			, `updatedAt`)
		VALUE
			( #{articleId}
			, #{userId}
			, #{userName}
			, LAST_INSERT_ID()+1
			, 1
			, #{content}
			, now()
			, now())
	
	</insert>
	
	<select id="selectCommentByArticleId"
		parameterType="int"
		resultType="com.minieyes.stories.bbs.model.Comment">
		
		SELECT
			`id`
			, `articleId`
			, `userId`
			, `userName`
			, `grpId`
			, `depth`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`articleId` = #{articleId}
		ORDER BY
			`id`
	
	</select>
	
	<delete id="deleteComment"
		parameterType="int">
		
		DELETE FROM
			`comment`
		WHERE
			`id` = #{id}
	
	</delete>
	
	<update id="updateComment"
		parameterType="map">
		
		UPDATE `comment`
		SET
			`content` = #{content},
			`updatedAt` = now()
		WHERE
			`id` = #{id}
			
	</update>


</mapper>